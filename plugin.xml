<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-android-insets"
    version="1.0.0">
    <name>InsetsPlugin</name>
    <description>Cordova Insets Plugin</description>

    <js-module name="InsetsPlugin" src="www/insets.js">
        <clobbers target="cordova.plugins.InsetsPlugin" />
    </js-module>
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="InsetsPlugin">
                <param name="android-package" value="com.maazkhaleeq.cordova.insets.InsetsPlugin"/>
            </feature>
        </config-file>
        <source-file src="src/android/InsetsPlugin.java" target-dir="src/com/maazkhaleeq/cordova/insets" />
    </platform>
</plugin>
